#!/usr/bin/env bash
set -eu -o pipefail

readonly crate_dir="$( cd -- $(dirname $(readlink -f ${BASH_SOURCE}))/..; pwd )"

cd "${crate_dir}"

"${crate_dir}/bin/generate-source"

cargo doc \
          --package capnp \
          --package flatbuffers \
          --package wikimedia-downloader \
          --document-private-items \
          --no-deps \
          --open
