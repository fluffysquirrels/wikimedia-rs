#!/usr/bin/env bash
set -eu -o pipefail

readonly crate_dir="$( cd -- $(dirname $(readlink -f ${BASH_SOURCE}))/..; pwd )"

cd "${crate_dir}"

"${crate_dir}/bin/generate-flatbuffer"

cargo doc \
          --package flatbuffers \
          --package wikimedia-downloader \
          --document-private-items \
          --no-deps

xdg-open "${crate_dir}/target/doc/wmd/index.html"
